<h1>ユーザー一覧</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">name</th>
            <th scope="col">email</th>
            <th scope="col">password</th>
            <th scope="col">info</th>
            <th scope="col">delete</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <th scope="row"><%= user.id %></th>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><%= user.password_digest %></td>
                <td><%= link_to "詳細", user_path(user.id), class: "btn btn-info" %></td>
                <td><%= link_to "削除", user_path(user.id), class: "btn btn-danger", method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= link_to "トップへ", root_path, class:"btn btn-info" %>
<%= link_to "ログアウト", users_logout_path, class:"btn btn-danger", method: :post %>