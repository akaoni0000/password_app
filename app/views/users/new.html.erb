<h1>ユーザー作成</h1>
<%= form_with(model: @user, local: true) do |f| %>
    <label>名前</label>
    <%= f.text_field :name %>
    <label>メールアドレス</label>
    <%= f.email_field :email %>
    <label>パスワード</label>
    <%= f.password_field :password %>
    <label>パスワード確認</label>
    <%= f.password_field :password_confirmation %>
    <%= f.submit "登録", class: "btn btn-success" %>
<% end %>
<div>
    <%= link_to "一覧へ", users_path, class: "btn btn-dark" %>
</div>